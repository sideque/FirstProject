<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Orders</title>
  <style>
    .orders-container { max-width: 800px; margin: 0 auto; padding: 20px; }
    .order-footer { border: 1px solid #ccc; padding: 15px; margin-bottom: 10px; border-radius: 5px; }
    .order-total { font-weight: bold; }
    .order-actions { margin-top: 10px; }
    .btn-details, .btn-cancel, .btn-track {
      padding: 8px 12px; margin-right: 10px; text-decoration: none; border-radius: 4px;
    }
    .btn-details { background-color: #007bff; color: white; }
    .btn-cancel { background-color: #dc3545; color: white; }
    .btn-track { background-color: #28a745; color: white; }
    .pagination { display: flex; justify-content: center; gap: 10px; margin-top: 20px; }
    .pagination a {
      padding: 8px 12px; text-decoration: none; border: 1px solid #ccc; border-radius: 4px;
    }
    .pagination a.active { background-color: #007bff; color: white; border-color: #007bff; }
    .pagination a:hover { background-color: #f0f0f0; }
  </style>
</head>
<body>
  <div class="orders-container">
    <h2>My Orders</h2>
    <% if (orders.length === 0) { %>
      <p>No orders found.</p>
    <% } else { %>
      <% orders.forEach(order => { %>
        <div class="order-footer">
          <div class="order-total">Total: â‚¹<%= order.finalAmount %></div>
          <div class="order-actions">
            <a href="/order/<%= order._id %>" class="btn-details">View Details</a>
            <% if (order.status === 'Processing') { %>
              <a href="#" onclick="cancelOrder('<%= order._id %>')" class="btn-cancel">Cancel Order</a>
            <% } %>
            <% if (order.status === 'Shipped') { %>
              <a href="/order/<%= order._id %>/track" class="btn-track">Track Order</a>
            <% } %>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>

  <!-- Pagination Controls -->
  <div class="pagination">
    <% if (currentPage > 1) { %>
      <a href="/orders?page=<%= currentPage - 1 %>&limit=<%= limit %>">Previous</a>
    <% } %>
    <% for (let i = 1; i <= totalPages; i++) { %>
      <a href="/orders?page=<%= i %>&limit=<%= limit %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
    <% } %>
    <% if (currentPage < totalPages) { %>
      <a href="/orders?page=<%= currentPage + 1 %>&limit=<%= limit %>">Next</a>
    <% } %>
  </div>

  <script>
    async function cancelOrder(orderId) {
      if (confirm('Are you sure you want to cancel this order?')) {
        try {
          const response = await fetch('/order/cancel', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ orderId })
          });
          const result = await response.json();
          if (result.success) {
            alert('Order cancelled successfully');
            window.location.reload();
          } else {
            alert(result.message || 'Failed to cancel order');
          }
        } catch (error) {
          alert('An error occurred');
        }
      }
    }
  </script>
</body>
</html>