  <script>
 // Function to set the active sidebar item based on the current URL
document.addEventListener('DOMContentLoaded', function() {
  // Get the current path from the URL
  const currentPath = window.location.pathname;
  
  // Get all sidebar menu links
  const sidebarLinks = document.querySelectorAll('.sidebar-menu a');
  
  // Remove any existing 'active' classes
  sidebarLinks.forEach(link => {
    link.classList.remove('active');
  });
  
  // Set the 'active' class to the link that matches the current path
  sidebarLinks.forEach(link => {
    const linkPath = link.getAttribute('href');
    
    // Special case for dashboard to prevent it from being active everywhere
    if (linkPath === '/admin/' && currentPath !== '/admin/') {
      return;
    }
    
    // For other pages, check if the current path matches the link path
    if (currentPath === linkPath || 
        (linkPath !== '/' && 
         linkPath !== '/admin/' && 
         currentPath.startsWith(linkPath))) {
      link.classList.add('active');
    }
  });
});
  </script>