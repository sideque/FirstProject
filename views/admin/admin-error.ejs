        list-style: none;
        padding: 20px 0;
        margin: 0;
    }
    
    .sidebar-menu li {
        padding: 12px 20px;
        display: flex;
        align-items: center;
        transition: background-color 0.3s;
    }
    
    .sidebar-menu li:hover {
        background-color: #2A2A2A;
    }
    
    .sidebar-menu li.logout {
        margin-top: 30px;
        border-top: 1px solid #333;
        padding-top: 20px;
    }
    
    .sidebar-menu a {
        color: #CCC;
        text-decoration: none;
        font-size: 16px;
        margin-left: 12px;
        transition: color 0.3s;
    }
    
    .sidebar-menu a:hover {
        color: white;
    }
    
    .sidebar-menu a.active {
        color: #8DF1A1;
        font-weight: bold;
    }
    
    .sidebar-menu svg {
        width: 22px;
        height: 22px;
        fill: #CCC;
    }
    
    .sidebar-menu li:hover svg {
        fill: white;
    }
    
    /* Main Content Styles */
    h1 {
        font-size: 24px;
        margin-bottom: 40px;
    }
    
    .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 800px;
        width: 100%;
        margin: 0 auto;
        padding: 0 15px;
        box-sizing: border-box;
    }
    
    .form-group {
        width: 100%;
        margin-bottom: 30px;
    }
    
    label {
        display: block;
        margin-bottom: 10px;
        font-size: 16px;
    }
    
    input[type="text"], 
    textarea {
        width: 100%;
        padding: 12px;
        border-radius: 5px;
        border: none;
        background-color: white;
        font-size: 16px;
        box-sizing: border-box;
    }
    
    textarea {
        height: 100px;
        resize: vertical;
    }
    
    .btn-container {
        text-align: center;
        margin-top: 20px;
        width: 100%;
    }
    
    .btn-add {
        background-color: #8DF1A1;
        color: black;
        border: none;
        border-radius: 5px;
        padding: 12px 20px;
        font-size: 16px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s;
        min-width: 150px;
    }
    
    .btn-add:hover {
        background-color: #7AD88E;
    }
    
    /* Main content wrapper */
    .main-content {
        margin-left: 250px;
        padding: 30px;
        width: calc(100% - 250px);
        box-sizing: border-box;
    }
    
    /* Responsive styles */
    @media screen and (max-width: 992px) {
        .sidebar {
            width: 200px;
        }
        
        .main-content {
            margin-left: 200px;
            width: calc(100% - 200px);
        }
        
        .sidebar-menu a {
            font-size: 14px;
        }
    }
    
    @media screen and (max-width: 768px) {
        .sidebar {
            width: 60px;
            overflow: hidden;
        }
        
        .sidebar-menu a {
            display: none;
        }
        
        .sidebar-menu svg {
            width: 24px;
            height: 24px;
        }
        
        .main-content {
            margin-left: 60px;
            width: calc(100% - 60px);
            padding: 20px;
        }
        
        h1 {
            font-size: 22px;
            margin-bottom: 30px;
            text-align: center;
        }
    }
    
    @media screen and (max-width: 480px) {
        body {
            flex-direction: column;
        }
        
        .sidebar {
            width: 100%;
            height: auto;
            position: relative;
            overflow-x: auto;
        }
        
        .sidebar-menu {
            display: flex;
            padding: 10px;
        }
        
        .sidebar-menu li {
            padding: 8px;
        }
        
        .sidebar-menu li.logout {
            margin-top: 0;
            border-top: none;
            padding-top: 8px;
            margin-left: auto;
        }
        
        .main-content {
            margin-left: 0;
            width: 100%;
            padding: 15px;
        }
        
        h1 {
            font-size: 20px;
            margin-bottom: 25px;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        input[type="text"], 
        textarea {
            padding: 10px;
            font-size: 14px;
        }
        
        .btn-add {
            padding: 10px 16px;
            font-size: 14px;
            width: 100%;
            max-width: 250px;
        }
    }
</style>
