<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MobiVault Brand</title>
  
  <!-- External CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/sideBar.css">
  
  <!-- Custom CSS -->
  <style>
    /* General styling */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #1E1E1E;
        color: #333;
    }
    
   
    /* Search container */
    .search-container {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        margin-left: 250px;
        padding: 10px 20px;
    }
    
    .search-icon {
        margin-right: 10px;
        color: #ccc;
    }
    
    /* Responsive Styles */
    @media (max-width: 992px) {
       
        .search-container {
            margin-left: 200px;
        }
    }
    
    @media (max-width: 768px) {
       
        .search-container {
            margin-left: 60px;
        }
    }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            background-color: #121316;
            color: white;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }
        
        .container {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
        }
        
        h1 {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 40px;
            text-align: left;
            width: 100%;
        }
        
        .form-group {
            margin-bottom: 30px;
            width: 100%;
        }
        
        .form-label {
            display: block;
            margin-bottom: 10px;
            font-weight: 400;
        }
        
        .form-input {
            width: 100%;
            padding: 12px;
            border-radius: 6px;
            border: 1px solid #2c2f33;
            background-color: white;
            color: black;
            font-size: 16px;
        }
        
        textarea.form-input {
            min-height: 100px;
            resize: vertical;
        }
        
        .btn-container {
            display: flex;
            justify-content: center;
            margin-top: 30px;
        }
        
        .btn-submit {
            background-color: #7bed9f;
            color: black;
            border: none;
            padding: 12px 20px;
            border-radius: 6px;
            font-weight: 600;
            cursor: pointer;
            font-size: 16px;
            transition: all 0.3s ease;
            min-width: 160px;
            text-align: center;
        }
        
        .btn-submit:hover {
            background-color: #6bd48c;
        }
        
        /* Responsive styles */
        @media (max-width: 768px) {
            .container {
                width: 100%;
            }
        }
  </style>
  
  <!-- External JS -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <%-include("../../views/partials/admin/brand-sidebar")%>   
  
  <!-- Main content -->
  <div class="container">
    <h1>Add Brands</h1>
    
    <form id="addBrandForm">
        <div class="form-group">
            <label for="brand-name" class="form-label">Brand Name:</label>
            <input type="text" id="brand-name" class="form-input">
            <div id="name-error" class="error-message" style="color: red; display: none;"></div>
        </div>
        
        <div class="form-group">
            <label for="brand-description" class="form-label">Description:</label>
            <!-- <textarea id="brand" class="form-input"></textarea> -->
            <textarea id="brand-description" class="form-input"></textarea>
            <div id="description-error" class="error-message" style="color: red; display: none;"></div>
        </div>
        
        <div class="btn-container">
            <button type="submit" class="btn-submit">ADD Brand</button>
        </div>
    </form>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('addBrandForm');
    if (form) {
        form.addEventListener('submit', handleFormSubmit);
    }


    function handleFormSubmit(event) {
    event.preventDefault();
    console.log("Form submitted");
    if (!validateForm()) {
        console.log("Validation failed");
        return;
    }
    console.log("Validation passed, sending fetch");
    const name = document.getElementById("brand-name").value.trim();
    const description = document.getElementById("brand-description").value.trim();

    fetch('/admin/addBrand', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ name, description })
    })
    .then(response => {
        console.log("Response received:", response.status);
        if (!response.ok) {
            return response.json().then(err => {
                throw new Error(err.error);
            });
        }
        return response.json();
    })
    .then(data => {
        console.log("Data:", data);
        window.location.href = '/admin/brand';
    })
    .catch(error => {
        console.error("Error:", error);
        Swal.fire({
            icon: 'error',
            title: 'Oops',
            text: error.message || 'An error occurred while adding the brand'
        });
    });
}

    function validateForm() {
        clearErrorMessages();
        const name = document.getElementById("brand-name").value.trim();
        const description = document.getElementById("brand-description").value.trim();
        let isValid = true;

        if (name === "") {
            displayErrorMessage("name-error", "Please enter a name");
            isValid = false;
        } else if (!/^[a-zA-Z\s]+$/.test(name)) {
            displayErrorMessage("name-error", "Brand name should contain only alphabetic characters");
            isValid = false;
        }

        if (description === "") {
            displayErrorMessage("description-error", "Please enter a description");
            isValid = false;
        }

        return isValid;
    }

    function displayErrorMessage(elementId, message) {
        const errorElement = document.getElementById(elementId);
        if (errorElement) {
            errorElement.innerText = message;
            errorElement.style.display = "block";
        }
    }

    function clearErrorMessages() {
        const errorElements = document.getElementsByClassName("error-message");
        Array.from(errorElements).forEach(element => {
            element.innerText = "";
            element.style.display = "none";
        });
    }
});

</script>
</body>
</html>