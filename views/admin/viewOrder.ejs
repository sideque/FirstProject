<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        :root {
            --primary-color: #4778FF;
            --secondary-color: #2A2A2A;
            --success-color: #2ecc71;
            --danger-color: #e74c3c;
            --warning-color: #f39c12;
            --light-color: #ecf0f1;
            --dark-color: #1E1E1E;
            --accent-color: #9747FF;
            --text-color: #ffffff;
            --text-muted: #999999;
            --border-color: rgba(255, 255, 255, 0.1);
            --card-bg: #2A2A2A;
        }

        .btn-accept {
            background-color: green;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-reject {
            background-color: red;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:disabled {
            background-color: gray;
            cursor: not-allowed;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--dark-color);
            color: var(--text-color);
            margin: 0;
            padding: 0;
        }

        .header-container {
            position: fixed;
            top: 20px;
            right: 30px;
            display: flex;
            align-items: center;
            gap: 20px;
            z-index: 90;
        }

        .sidebar {
            background-color: var(--secondary-color);
            width: 250px;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            transition: all 0.3s ease;
            z-index: 100;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.2);
        }

        .main-content {
            margin-left: 250px;
            padding: 20px;
            transition: margin-left 0.3s;
        }

        .card {
            background-color: var(--card-bg);
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            margin-bottom: 25px;
            padding: 25px;
            border: 1px solid var(--border-color);
        }

        .card-header {
            border-bottom: 1px solid var(--border-color);
            margin-bottom: 20px;
            padding-bottom: 15px;
        }

        .card-title {
            font-size: 24px;
            font-weight: 600;
            margin: 0;
            color: var(--text-color);
        }

        .detail-row {
            margin-bottom: 20px;
        }

        .detail-label {
            font-weight: 600;
            color: var(--text-muted);
            margin-right: 10px;
        }

        .detail-value {
            color: var(--text-color);
        }

        .detail-address {
            margin-top: 5px;
            color: var(--text-muted);
        }

        .detail-phone {
            margin-top: 5px;
            color: var(--text-muted);
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
            color: var(--text-color);
        }

        .table th {
            background-color: rgba(0, 0, 0, 0.3);
            color: var(--text-color);
            padding: 12px 15px;
            text-align: left;
            font-weight: 500;
            border-bottom: 1px solid var(--border-color);
        }

        .table td {
            padding: 15px;
            border-bottom: 1px solid var(--border-color);
            vertical-align: middle;
        }

        .table tr:last-child td {
            border-bottom: none;
        }

        .table .product-image {
            width: 60px;
            height: 60px;
            border-radius: 5px;
            overflow: hidden;
            background-color: #333;
        }

        .table .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .total-row {
            font-weight: 600;
        }

        .status-badge {
            padding: 6px 12px;
            border-radius: 50px;
            font-size: 12px;
            font-weight: 500;
            text-align: center;
            display: inline-block;
            min-width: 80px;
        }

        .status-pending {
            background-color: rgba(243, 156, 18, 0.2);
            color: #f39c12;
            border: 1px solid rgba(243, 156, 18, 0.5);
        }

        .status-processing {
            background-color: rgba(243, 156, 18, 0.2);
            color: #f39c12;
            border: 1px solid rgba(243, 156, 18, 0.5);
        }

        .status-shipped {
            background-color: rgba(52, 152, 219, 0.2);
            color: #3498db;
            border: 1px solid rgba(52, 152, 219, 0.5);
        }

        .status-delivered {
            background-color: rgba(46, 204, 113, 0.2);
            color: #2ecc71;
            border: 1px solid rgba(46, 204, 113, 0.5);
        }

        .status-cancelled {
            background-color: rgba(231, 76, 60, 0.2);
            color: #e74c3c;
            border: 1px solid rgba(231, 76, 60, 0.5);
        }

        .status-returned,
        .status-return-request,
        .status-return-requested {
            background-color: rgba(155, 89, 182, 0.2);
            color: #9b59b6;
            border: 1px solid rgba(155, 89, 182, 0.5);
        }

        .btn {
            border-radius: 6px;
            font-weight: 500;
            padding: 10px 16px;
            transition: all 0.3s ease;
            text-transform: uppercase;
            font-size: 14px;
            letter-spacing: 0.5px;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .btn-primary:hover {
            background-color: #3565d8;
            border-color: #3565d8;
        }

        .btn-item-return {
            background-color: #9b59b6;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 4px 8px;
            font-size: 12px;
            margin-top: 5px;
            cursor: pointer;
        }

        .status-selector {
            width: 100%;
            padding: 10px;
            border-radius: 6px;
            border: 1px solid var(--border-color);
            margin-bottom: 20px;
            background-color: #333;
            color: var(--text-color);
        }

        .form-select {
            background-color: #333;
            color: var(--text-color);
            border: 1px solid var(--border-color);
        }

        .form-select:focus {
            box-shadow: 0 0 0 0.25rem rgba(71, 120, 255, 0.25);
            border-color: var(--primary-color);
        }

        @media (max-width: 992px) {
            .sidebar {
                width: 200px;
            }

            .main-content {
                margin-left: 200px;
            }
        }

        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .main-content {
                margin-left: 0;
            }

            .table-responsive {
                overflow-x: auto;
            }
        }

        @media (max-width: 576px) {
            .card {
                padding: 15px;
            }

            .card-title {
                font-size: 20px;
            }

            .detail-row {
                margin-bottom: 15px;
            }

            .detail-label,
            .detail-value {
                display: block;
            }

            .detail-label {
                margin-bottom: 5px;
            }

            .btn {
                width: 100%;
            }
        }

        .swal2-popup {
            background-color: #333 !important;
            color: #fff !important;
        }

        .swal2-title,
        .swal2-content {
            color: #fff !important;
        }

        .swal2-confirm {
            background-color: var(--primary-color) !important;
        }

        .swal2-cancel {
            background-color: var(--danger-color) !important;
        }
    </style>
</head>
<body>
    <%- include("../../views/partials/admin/admin-sidebar") %>
    <div class="main-content">
        <div class="card">
            <div class="card-header">
                <h1 class="card-title">Order Details</h1>
            </div>
            <div class="card-body">
                <h2 style="color: #2ecc71;">Order Information</h2>
                <div class="row">
                    <div class="col-md-8">
                        <div class="detail-row">
                            <span class="detail-label">Order ID:</span>
                            <span class="detail-value"><%= order.orderId %></span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Customer Name:</span>
                            <span class="detail-value"><%= order.customerName %></span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Order Date:</span>
                            <span class="detail-value"><%= new Date(order.createdAt).toDateString() %></span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Shipping Address:</span>
                            <span class="detail-value">
                                <%= order.address.name %>, <%= order.address.addressLine1 %>,
                                <%= order.address.addressLine2 ? order.address.addressLine2 + ', ' : '' %>
                                <%= order.address.city %>, <%= order.address.state %> - <%= order.address.pincode %>
                                <div class="detail-phone">
                                    Phone: <%= order.address.phone %>
                                    <%= order.address.altPhone ? `| Alt: ${order.address.altPhone}` : '' %>
                                </div>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <% if (order.status === 'Pending' || order.status === 'Processing' || order.status === 'Shipped') { %>
                            <select class="form-select status-selector" id="status-<%= order.orderId %>">
                                <option value="Pending" <%= order.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                                <option value="Processing" <%= order.status === 'Processing' ? 'selected' : '' %>>Processing</option>
                                <option value="Shipped" <%= order.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                                <option value="Delivered" <%= order.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                <option value="Cancelled" <%= order.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                            </select>
                            <button class="btn btn-primary w-100 mt-2" onclick="updateStatus('<%= order.orderId %>')">Update Status</button>
                        <% } else if (order.status === 'Returned' || order.status === 'Return Request' || order.status === 'Return Requested') { %>
                            <% if (order.isReturnRequested) { %>
                                <div>
                                    <strong><p style="color: white;">Return reason: <span style="color: red;"><%= order.returnReason || 'No reason provided' %></span></p></strong>
                                    <button onclick="orderReturn('<%= order.orderId %>', 'accept')" class="btn-accept">Accept</button>
                                    <button onclick="orderReturn('<%= order.orderId %>', 'reject')" class="btn-reject">Reject</button>
                                </div>
                            <% } %>
                        <% } else { %>
                            <p class="text-success fw-bold">Status: <%= order.status %></p>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Product Name</th>
                                <th>Quantity</th>
                                <th>Unit Price</th>
                                <th>Total Price</th>
                                <th>Status</th>
                                <th>Return Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% (order.products || []).forEach(item => { %>
                                <tr>
                                    <td>
                                       <div class="product-image">
                                            <img
                                                src="/uploads/product-images/<%= item.image || 'default.jpg' %>"
                                                alt="<%= item.name || 'Product Image' %>"
                                                onerror="this.src='/uploads/product-images/default.jpg';"
                                            />
                                        </div>

                                    </td>
                                    <td><%= item.name || 'N/A' %></td>
                                    <td><%= item.quantity || 1 %></td>
                                    <td>
                                        ₹<%= (item.price || 0).toLocaleString('en-IN', {
                                            minimumFractionDigits: 2,
                                            maximumFractionDigits: 2
                                        }) %>
                                    </td>
                                    <td>
                                        ₹<%= (item.total || (item.price || 0) * (item.quantity || 1)).toLocaleString('en-IN', {
                                            minimumFractionDigits: 2,
                                            maximumFractionDigits: 2
                                        }) %>
                                    </td>
                                    <td>
                                        <span
                                            class="status-badge status-<%= (item.status || order.status || 'Pending').toLowerCase().replace(' ', '-') %>"
                                        >
                                            <%= item.status || order.status || 'Pending' %>
                                        </span>
                                    </td>
                                    <td>
                                        <% if (item.status === 'Delivered') { %>
                                            <button
                                                onclick="returnItem('<%= order.orderId %>', '<%= item._id %>')"
                                                class="btn-item-return"
                                            >
                                                Request Return
                                            </button>
                                        <% } else if (item.status === 'Return Request' || item.status === 'Return Requested') { %>
                                            <div>
                                                <strong>
                                                    <p style="color: white;">
                                                        Return reason: <span style="color: red;"><%= item.returnReason || 'No reason provided' %></span>
                                                    </p>
                                                </strong>
                                                <button
                                                    onclick="handleItemReturn('<%= order.orderId %>', '<%= item._id %>', 'accept')"
                                                    class="btn-accept"
                                                >
                                                    Accept
                                                </button>
                                                <button
                                                    onclick="handleItemReturn('<%= order.orderId %>', '<%= item._id %>', 'reject')"
                                                    class="btn-reject"
                                                >
                                                    Reject
                                                </button>
                                            </div>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                            <tr class="total-row">
                                <td colspan="4" class="text-end">Total</td>
                                <td>
                                    ₹<%= (order.finalAmount || 0).toLocaleString('en-IN', {
                                        minimumFractionDigits: 2,
                                        maximumFractionDigits: 2
                                    }) %>
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        function updateStatus(orderId) {
            const statusValue = document.querySelector(`#status-${orderId}`).value;

            Swal.fire({
                title: 'Update Status?',
                text: `Are you sure you want to update the order status to ${statusValue}?`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#4778FF',
                cancelButtonColor: '#e74c3c',
                confirmButtonText: 'Yes, update it!',
                background: '#333',
                color: '#fff'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/admin/updateStatus/${orderId}`, {
                        method: 'PATCH',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ status: statusValue })
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                Swal.fire({
                                    title: 'Updated!',
                                    text: 'Order status has been updated successfully.',
                                    icon: 'success',
                                    toast: true,
                                    position: 'bottom-end',
                                    showConfirmButton: false,
                                    timer: 3000,
                                    timerProgressBar: true,
                                    background: '#333',
                                    color: '#fff'
                                });
                                setTimeout(() => {
                                    location.reload();
                                }, 3000);
                            } else {
                                Swal.fire({
                                    title: 'Error!',
                                    text: data.error || 'Failed to update status.',
                                    icon: 'error',
                                    background: '#333',
                                    color: '#fff'
                                });
                            }
                        })
                        .catch(error => {
                            console.error('Error updating status:', error);
                            Swal.fire({
                                title: 'Error!',
                                text: 'Something went wrong.',
                                icon: 'error',
                                background: '#333',
                                color: '#fff'
                            });
                        });
                }
            });
        }

        function orderReturn(orderId, action) {
            const buttons = document.querySelectorAll(`[onclick*='${orderId}']`);
            buttons.forEach(button => button.disabled = true);

            Swal.fire({
                title: `Confirm ${action.charAt(0).toUpperCase() + action.slice(1)}`,
                text: `Are you sure you want to ${action} the return request for this order?`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#4778FF',
                cancelButtonColor: '#e74c3c',
                confirmButtonText: `Yes, ${action} it!`,
                background: '#333',
                color: '#fff'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/admin/returnOrder?orderId=${orderId}&action=${action}`, {
                        method: 'GET'
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                Swal.fire({
                                    title: 'Updated!',
                                    text: data.message || 'Order return status updated successfully.',
                                    icon: 'success',
                                    toast: true,
                                    position: 'bottom-end',
                                    showConfirmButton: false,
                                    timer: 3000,
                                    timerProgressBar: true,
                                    background: '#333',
                                    color: '#fff'
                                });
                                setTimeout(() => {
                                    location.reload();
                                }, 3000);
                            } else {
                                Swal.fire({
                                    title: 'Error!',
                                    text: data.error || 'Failed to update return status.',
                                    icon: 'error',
                                    background: '#333',
                                    color: '#fff'
                                });
                                buttons.forEach(button => button.disabled = false);
                            }
                        })
                        .catch(error => {
                            console.error('Error updating return status:', error);
                            Swal.fire({
                                title: 'Error!',
                                text: 'Something went wrong.',
                                icon: 'error',
                                background: '#333',
                                color: '#fff'
                            });
                            buttons.forEach(button => button.disabled = false);
                        });
                } else {
                    buttons.forEach(button => button.disabled = false);
                }
            });
        }

        function handleItemReturn(orderId, itemId, action) {
            const buttons = document.querySelectorAll(`[onclick*='${itemId}']`);
            buttons.forEach(button => button.disabled = true);

            Swal.fire({
                title: `Confirm ${action.charAt(0).toUpperCase() + action.slice(1)}`,
                text: `Are you sure you want to ${action} the return request for this item?`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#4778FF',
                cancelButtonColor: '#e74c3c',
                confirmButtonText: `Yes, ${action} it!`,
                background: '#333',
                color: '#fff'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/admin/returnItem?orderId=${orderId}&itemId=${itemId}&action=${action}`, {
                        method: 'GET'
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                Swal.fire({
                                    title: 'Updated!',
                                    text: data.message || 'Item return status updated successfully.',
                                    icon: 'success',
                                    toast: true,
                                    position: 'bottom-end',
                                    showConfirmButton: false,
                                    timer: 3000,
                                    timerProgressBar: true,
                                    background: '#333',
                                    color: '#fff'
                                });
                                setTimeout(() => {
                                    location.reload();
                                }, 3000);
                            } else {
                                Swal.fire({
                                    title: 'Error!',
                                    text: data.error || 'Failed to update return status.',
                                    icon: 'error',
                                    background: '#333',
                                    color: '#fff'
                                });
                                buttons.forEach(button => button.disabled = false);
                            }
                        })
                        .catch(error => {
                            console.error('Error handling item return:', error);
                            Swal.fire({
                                title: 'Error!',
                                text: 'Something went wrong.',
                                icon: 'error',
                                background: '#333',
                                color: '#fff'
                            });
                            buttons.forEach(button => button.disabled = false);
                        });
                } else {
                    buttons.forEach(button => button.disabled = false);
                }
            });
        }

        function returnItem(orderId, itemId) {
            Swal.fire({
                title: 'Return Item',
                input: 'textarea',
                inputLabel: 'Return Reason',
                inputPlaceholder: 'Please provide a reason for returning this item...',
                showCancelButton: true,
                confirmButtonText: 'Submit Return Request',
                background: '#333',
                color: '#fff',
                inputValidator: (value) => {
                    if (!value) {
                        return 'You need to provide a reason!';
                    }
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    const returnReason = result.value;

                    fetch(`/admin/returnItem`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            orderId: orderId,
                            itemId: itemId,
                            returnReason: returnReason
                        })
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                Swal.fire({
                                    title: 'Return Requested!',
                                    text: 'Item return request has been submitted successfully.',
                                    icon: 'success',
                                    background: '#333',
                                    color: '#fff'
                                });
                                setTimeout(() => {
                                    location.reload();
                                }, 2000);
                            } else {
                                Swal.fire({
                                    title: 'Error!',
                                    text: data.error || 'Failed to submit return request.',
                                    icon: 'error',
                                    background: '#333',
                                    color: '#fff'
                                });
                            }
                        })
                        .catch(error => {
                            console.error('Error submitting return request:', error);
                            Swal.fire({
                                title: 'Error!',
                                text: 'Something went wrong.',
                                icon: 'error',
                                background: '#333',
                                color: '#fff'
                            });
                        });
                }
            });
        }
    </script>
</body>
</html>