<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MobiVault Admin - Products</title>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <link rel="stylesheet" href="/css/sideBar.css">
  <style>
    /* General styling */
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #161618;
      color: #ffffff;
    }

    /* Main Content Styles */
    .main-content {
      margin-left: 250px;
      padding: 20px;
      transition: margin-left 0.3s;
    }

    .container {
      max-width: 100%;
      overflow-x: auto;
    }

    /* Brands/Products Header */
    .brands-container {
      background-color: #2a2a2a;
      border-radius: 8px;
      padding: 20px;
      margin-bottom: 20px;
    }

    .brands-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .brands-title {
      font-size: 24px;
      font-weight: bold;
      color: #fff;
    }

    .add-button {
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 4px;
      padding: 10px 15px;
      font-size: 16px;
      cursor: pointer;
    }

    .add-button a {
      color: white;
      text-decoration: none;
    }

    /* Table Styling */
    table {
      width: 100%;
      border-collapse: collapse;
      background-color: #1e1e24;
      border-radius: 8px;
      overflow: hidden;
    }

    th {
      text-align: left;
      padding: 12px 15px;
      font-size: 14px;
      color: #a0a0a0;
      font-weight: 600;
      text-transform: uppercase;
      border-bottom: 1px solid #2c2c34;
    }

    td {
      padding: 15px;
      border-bottom: 1px solid #2c2c34;
      font-size: 14px;
      vertical-align: middle;
    }

    tr:hover {
      background-color: #25252d;
    }

    /* Product Style Elements */
    .product-image {
      width: 50px;
      height: 50px;
      object-fit: cover;
      border-radius: 4px;
      background-color: #333;
    }

    .product-name {
      font-weight: 500;
      color: #e0e0e0;
    }

    .brand {
      color: #a0a0a0;
    }

    .status {
      color: #4ade80;
      font-size: 18px;
    }

    .amount {
      font-weight: 600;
    }

    .color-options {
      display: flex;
      gap: 8px;
    }

    .color-option {
      width: 16px;
      height: 16px;
      border-radius: 50%;
      display: inline-block;
    }

    .color-red {
      background-color: #ff0000;
    }

    .color-black {
      background-color: #000000;
    }

    .color-blue {
      background-color: #0000ff;
    }


    .actions {
  display: flex;
  gap: 12px;
  justify-content: center;
}

.action-btn {
  background: none;
  border: none;
  cursor: pointer;
  border-radius: 4px;
  padding: 6px;
  transition: background-color 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn:hover {
  background-color: #2a2a30;
}

.edit-btn {
  color: #ff9500;
}

.edit-btn:hover {
  color: #ffac3a;
}

.delete-btn {
  color: #ff3b30;
}

.delete-btn:hover {
  color: #ff6961;
}


    /* Pagination */
    .pagination {
      display: flex;
      justify-content: flex-end;
      align-items: center;
      margin-top: 20px;
      gap: 8px;
    }

    .pagination-info {
      color: #a0a0a0;
      font-size: 14px;
      margin-right: 10px;
    }

    .pagination-btn {
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: none;
      border: none;
      color: #ffffff;
      cursor: pointer;
      border-radius: 4px;
    }

    .pagination-btn:hover {
      background-color: #25252d;
    }

    .pagination-btn.active {
      background-color: #4CAF50;
    }

    .pagination-dots {
      color: #a0a0a0;
    }

    /* Responsive Styles */
    @media (max-width: 992px) {
      .main-content {
        margin-left: 200px;
      }
    }

    @media (max-width: 768px) {
      .main-content {
        margin-left: 60px;
      }
      table {
        font-size: 14px;
      }
      th, td {
        padding: 8px 10px;
      }
      .action-btn {
        padding: 4px;
      }
    }

    @media (max-width: 480px) {
      .main-content {
        margin-left: 0;
      }
    }
  </style>
</head>
<body>

    <%-include("../../views/partials/admin/product-sidebar")%> 
  <!-- Main content area -->
  <div class="main-content">
    <!-- Products Header -->
    <div class="brands-container">
      <div class="brands-header">
        <div class="brands-title">Products</div>
        <button class="add-button">
          <a href="/admin/add-product">ADD PRODUCT +</a>
        </button>
      </div>
    </div>

    <!-- Products Table -->
    <div class="container">
      <table>
        <thead>
          <tr>
            <th>Product Image</th>
            <th>Product Name</th>
            <th>Brand</th>
            <th>Piece</th>
            <th>Status</th>
            <th>Amount</th>
            <th>Last Updated</th>
            <th>Color Available</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><img src="phone-redmi-a4.jpg" alt="Redmi A4 5G" class="product-image"></td>
            <td class="product-name">Redmi A4 5G</td>
            <td class="brand">Redmi</td>
            <td>15</td>
            <td class="status">✓</td>
            <td class="amount">₹8,999</td>
            <td>05/01/2025</td>
            <td>
              <div class="color-options">
                <span class="color-option color-red"></span>
                <span class="color-option color-black"></span>
                <span class="color-option color-blue"></span>
              </div>
            </td>
            <td>
                <div class="actions">
                  <button class="action-btn edit-btn" title="Edit">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                      <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                    </svg>
                  </button>
                  <button class="action-btn delete-btn" title="Delete">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <polyline points="3 6 5 6 21 6"></polyline>
                      <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                      <line x1="10" y1="11" x2="10" y2="17"></line>
                      <line x1="14" y1="11" x2="14" y2="17"></line>
                    </svg>
                  </button>
                </div>
              </td>              
          </tr>      
          </tbody>
      </table>
      
      <!-- Pagination -->
      <div class="pagination">
        <div class="pagination-info">SHOWING 1 OF 10</div>
        <button class="pagination-btn">←</button>
        <button class="pagination-btn">1</button>
        <button class="pagination-btn">2</button>
        <button class="pagination-btn active">3</button>
        <button class="pagination-btn">4</button>
        <span class="pagination-dots">...</span>
        <button class="pagination-btn">8</button>
        <button class="pagination-btn">9</button>
        <button class="pagination-btn">→</button>
      </div>
    </div>
  </div>

  <!-- JavaScript for interactive features (optional) -->
  <script>
    // You could add JavaScript here for actions like delete confirmations,
    // edit redirects, and other interactive features
    
    document.addEventListener('DOMContentLoaded', function() {
      // Example: Add confirmation for delete buttons
      const deleteButtons = document.querySelectorAll('.action-btn:nth-child(2)');
      deleteButtons.forEach(button => {
        button.addEventListener('click', function(e) {
          if (confirm('Are you sure you want to delete this product?')) {
            // Delete action would go here
            console.log('Product deleted');
          }
        });
      });
    });
  </script>
</body>
</html>